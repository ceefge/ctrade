@page "/trades"
@using CTrader.Data
@using CTrader.Data.Entities
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<AppDbContext> DbContextFactory

<PageTitle>Trades - CTrader</PageTitle>

<h1>Trade History</h1>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>All Trades</span>
        <div>
            <select class="form-select form-select-sm d-inline-block w-auto" @bind="_filterSymbol">
                <option value="">All Symbols</option>
                @foreach (var symbol in _symbols)
                {
                    <option value="@symbol">@symbol</option>
                }
            </select>
            <select class="form-select form-select-sm d-inline-block w-auto ms-2" @bind="_filterDays">
                <option value="7">Last 7 days</option>
                <option value="30">Last 30 days</option>
                <option value="90">Last 90 days</option>
                <option value="365">Last year</option>
                <option value="0">All time</option>
            </select>
            <button class="btn btn-sm btn-outline-primary ms-2" @onclick="LoadTrades">Apply</button>
        </div>
    </div>
    <div class="card-body">
        @if (_trades.Any())
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Date/Time</th>
                        <th>Symbol</th>
                        <th>Side</th>
                        <th class="text-end">Quantity</th>
                        <th class="text-end">Price</th>
                        <th class="text-end">Value</th>
                        <th class="text-end">Commission</th>
                        <th>Regime</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var trade in _trades)
                    {
                        <tr>
                            <td>@trade.ExecutedAt.ToString("g")</td>
                            <td><strong>@trade.Symbol</strong></td>
                            <td>
                                <span class="badge @(trade.Side == "BUY" ? "bg-success" : "bg-danger")">
                                    @trade.Side
                                </span>
                            </td>
                            <td class="text-end">@trade.Quantity</td>
                            <td class="text-end">@trade.Price.ToString("C")</td>
                            <td class="text-end">@((trade.Quantity * trade.Price).ToString("C"))</td>
                            <td class="text-end">@(trade.Commission?.ToString("C") ?? "-")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(trade.Regime))
                                {
                                    <span class="badge bg-secondary">@trade.Regime</span>
                                }
                            </td>
                            <td class="small">@trade.Notes</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="row mt-4">
                <div class="col-md-3">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h6 class="card-title">Total Trades</h6>
                            <h3>@_trades.Count</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h6 class="card-title">Buy Volume</h6>
                            <h3 class="text-success">@_trades.Where(t => t.Side == "BUY").Sum(t => t.Quantity * t.Price).ToString("C")</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h6 class="card-title">Sell Volume</h6>
                            <h3 class="text-danger">@_trades.Where(t => t.Side == "SELL").Sum(t => t.Quantity * t.Price).ToString("C")</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h6 class="card-title">Total Commission</h6>
                            <h3>@_trades.Sum(t => t.Commission ?? 0).ToString("C")</h3>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <p class="text-muted">No trades found for the selected filters.</p>
            </div>
        }
    </div>
</div>

@code {
    private List<Trade> _trades = [];
    private List<string> _symbols = [];
    private string _filterSymbol = "";
    private int _filterDays = 30;

    protected override async Task OnInitializedAsync()
    {
        await LoadSymbols();
        await LoadTrades();
    }

    private async Task LoadSymbols()
    {
        await using var context = await DbContextFactory.CreateDbContextAsync();
        _symbols = await context.Trades.Select(t => t.Symbol).Distinct().OrderBy(s => s).ToListAsync();
    }

    private async Task LoadTrades()
    {
        await using var context = await DbContextFactory.CreateDbContextAsync();
        var query = context.Trades.AsQueryable();

        if (!string.IsNullOrEmpty(_filterSymbol))
        {
            query = query.Where(t => t.Symbol == _filterSymbol);
        }

        if (_filterDays > 0)
        {
            var cutoff = DateTime.UtcNow.AddDays(-_filterDays);
            query = query.Where(t => t.ExecutedAt >= cutoff);
        }

        _trades = await query.OrderByDescending(t => t.ExecutedAt).ToListAsync();
    }
}
