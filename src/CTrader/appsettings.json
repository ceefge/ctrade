{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Data Source=data/ctrader.db"
  },
  "IbGateway": {
    "Host": "localhost",
    "Port": 4001,
    "ClientId": 1,
    "SimulateConnection": true,
    "RequestTimeoutMs": 15000
  },
  "Finnhub": {
    "ApiKey": ""
  },
  "AlphaVantage": {
    "ApiKey": ""
  },
  "Anthropic": {
    "ApiKey": ""
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "data/logs/ctrader-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  }
}
